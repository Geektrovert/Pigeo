<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MapsActivity"
        android:orientation="vertical">
    <android.support.design.widget.BottomNavigationView
            style="@style/Base.Theme.MaterialComponents.Light"
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="#167496"
            app:menu="@menu/bottom_nav_menu"/>
    <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
			android:layout_above="@id/online_status"/>
    <LinearLayout
			android:id="@+id/online_status"
			android:layout_above="@id/bottom_nav"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#070707"
			android:gravity="center"
			android:orientation="horizontal">
		<Button
				android:id="@+id/notifications"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:text="5"
				android:drawableStart="@drawable/bell"
				android:paddingStart="20dp"
				android:paddingEnd="20dp"
				android:textColor="#070707"
				android:background="@drawable/round_button_white"/>
		<Button
				android:id="@+id/active_users"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:text="5"
				android:drawableStart="@drawable/account_multiple"
				android:paddingStart="20dp"
				android:paddingEnd="20dp"
				android:textColor="#070707"
				android:background="@drawable/round_button_white"/>
		<Button
				android:id="@+id/contacts"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:text="5"
				android:drawableStart="@drawable/contacts"
				android:paddingStart="20dp"
				android:paddingEnd="20dp"
				android:textColor="#070707"
				android:background="@drawable/round_button_white"/>
	</LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
		style="@style/Base.Theme.MaterialComponents"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="16dp"
		tools:context=".activities.LoginActivity"
		android:background="#004158">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			style="@style/Base.Theme.MaterialComponents">

		<TextView
				style="@style/Base.Theme.MaterialComponents"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/edit_name"
				android:text="@string/name"
				android:textColor="#fafafa"/>

		<EditText
				android:id="@+id/edit_name"
				style="@style/Base.Theme.MaterialComponents"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:inputType="textPersonName"
				android:textColor="#fafafa"
				android:textColorHint="#fafafa"
				android:textSize="20sp"
				android:importantForAutofill="no"
				tools:targetApi="o"/>

		<TextView
				style="@style/Base.Theme.MaterialComponents"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/edit_password"
				android:text="@string/new_password"
				android:textColor="#fafafa"/>
			<EditText
					android:id="@+id/edit_password"
					style="@style/Base.Theme.MaterialComponents"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:inputType="textPassword"
					android:textColor="#fafafa"
					android:textColorHint="#fafafa"
					android:textSize="20sp"
					android:importantForAutofill="no"
					tools:targetApi="o"/>

		<TextView
				style="@style/Base.Theme.MaterialComponents"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/confirm_edit_password"
				android:textColor="#fafafa"
				android:text="@string/confirm_new_password"/>

			<EditText
					android:id="@+id/confirm_edit_password"
					style="@style/Base.Theme.MaterialComponents"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:inputType="textPassword"
					android:textColor="#fafafa"
					android:textColorHint="#fafafa"
					android:textSize="20sp"
					android:importantForAutofill="no"
					tools:targetApi="o"/>

		<TextView
				style="@style/Base.Theme.MaterialComponents"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/current_password"
				android:textColor="#fafafa"
				android:text="@string/current_password"/>


			<EditText
					android:id="@+id/current_password"
					style="@style/Base.Theme.MaterialComponents"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:inputType="textPassword"
					android:textColor="#fafafa"
					android:textColorHint="#fafafa"
					android:textSize="20sp"
					android:importantForAutofill="no"
					tools:targetApi="o"/>

		<TextView
				style="@style/Base.Theme.MaterialComponents"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/edit_phone_no"
				android:textColor="#fafafa"
				android:text="@string/phone_number"/>
		<EditText
				android:id="@+id/edit_phone_no"
				style="@style/Base.Theme.MaterialComponents"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:inputType="phone"
				android:maxLength="14"
				android:textColor="#fafafa"
				android:textColorHint="#fafafa"
				android:textSize="20sp"
				android:importantForAutofill="no"
				tools:targetApi="o"/>

		<TextView
				style="@style/Base.Theme.MaterialComponents"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:labelFor="@+id/edit_national_id"
				android:textColor="#fafafa"
				android:text="@string/national_id"/>
		<EditText
				android:id="@+id/edit_national_id"
				style="@style/Base.Theme.MaterialComponents"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:inputType="number"
				android:maxLength="10"
				android:textColor="#fafafa"
				android:textColorHint="#fafafa"
				android:textSize="20sp"
				android:importantForAutofill="no"
				tools:targetApi="o"/>

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center"
				style="@style/Base.Theme.MaterialComponents">
			<Button
					android:id="@+id/cancel"
					android:background="@drawable/round_button_red"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/cancel"
					android:textColor="#fafafa"
					android:layout_margin="10dp"
					tools:ignore="ButtonStyle"/>
			<Button
					android:id="@+id/save"
					android:background="@drawable/round_button_green"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/save"
					android:textColor="#070707"
					android:layout_margin="10dp"
					tools:ignore="ButtonStyle"/>
		</LinearLayout>

	</LinearLayout>

</ScrollView>